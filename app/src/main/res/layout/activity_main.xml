<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_left_right"
    android:paddingTop="14dp"
    android:paddingBottom="12dp"
    android:background="?attr/colorSecondary"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_high"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:text="@string/search"
        app:icon="@drawable/ic_vector"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_in_button"
        app:iconTint="@color/black"
        style="@style/btn_main_screen"

        />

    <Button
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/media_library"
        app:icon="@drawable/ic_media"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_in_button"
        app:iconTint="@color/black"
        style="@style/btn_main_screen"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:text="@string/options"
        app:icon="@drawable/ic_options"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_in_button"
        app:iconTint="@color/black"
        style="@style/btn_main_screen"
        />
</LinearLayout>