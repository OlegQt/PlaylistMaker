<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPlayer">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/player_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:alpha="1"
        app:icon="@drawable/back_to_main_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player_art_work"
        android:layout_width="312dp"
        android:layout_height="312dp"
        android:layout_marginTop="46dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_track_found"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/player_btn_back" />

    <TextView
        android:id="@+id/player_track_name"
        style="@style/player_track_name"
        android:text="@string/app_name"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/player_art_work" />

    <TextView
        android:id="@+id/player_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/ys_display_medium"
        android:singleLine="true"
        android:text="The Beatles"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/player_track_name" />

<ImageButton
    android:layout_width="52dp"
    android:layout_height="52dp"
    android:background="@drawable/player_btn_round"
    android:src="@drawable/plus_track"
    android:layout_marginTop="54dp"
    app:layout_constraintStart_toEndOf="@id/left_guideline"
    app:layout_constraintTop_toBottomOf="@id/player_artist_name"/>

    <ImageButton
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/player_btn_round"
        android:src="@drawable/like_track"
        android:layout_marginTop="54dp"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/player_artist_name"/>

    <ImageButton
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:background="@drawable/play_track"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_artist_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>