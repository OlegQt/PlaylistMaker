<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/img_playlist_cover"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/image_rounded_cover"

        android:clipToOutline="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"

        android:src="@drawable/red_heart"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"

        android:maxLines="1"
        android:text="@string/app_name"

        app:layout_constraintStart_toStartOf="@id/img_playlist_cover"
        app:layout_constraintTop_toBottomOf="@id/img_playlist_cover" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"

        android:maxLines="1"
        android:text="@string/app_name"

        app:layout_constraintStart_toStartOf="@id/img_playlist_cover"
        app:layout_constraintTop_toBottomOf="@id/txt_playlist_name" />


</androidx.constraintlayout.widget.ConstraintLayout>