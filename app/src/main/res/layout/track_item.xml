<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/track_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/art_work"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="8dp"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:textSize="@dimen/medium_txt_height"
            android:text="@string/app_name"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/ys_display_regular"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:lines="1"
                android:maxEms="10"
                android:layout_marginEnd="5dp"
                android:text="@string/app_name"
                android:textSize="@dimen/medium_txt_small"
                android:textColor="?attr/colorOnSurfaceInverse"
                android:fontFamily="@font/ys_display_regular"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ellipse_1"
                android:layout_gravity="center_vertical"
                app:tint="?attr/colorOnSurfaceInverse"
                />
            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="@string/app_name"
                android:textSize="@dimen/medium_txt_small"
                android:textColor="?attr/colorOnSurfaceInverse"
                android:fontFamily="@font/ys_display_regular"
                />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/agreement"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        app:tint="?attr/colorOnSurfaceInverse"
        />

</LinearLayout>