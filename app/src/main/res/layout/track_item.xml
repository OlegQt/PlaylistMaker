<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/track_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/art_work"
        android:layout_width="@dimen/recycle_art_work_size"
        android:layout_height="@dimen/recycle_art_work_size"
        android:layout_marginVertical="@dimen/recycle_art_work_margin"
        android:layout_marginEnd="@dimen/recycle_art_work_margin" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            style="@style/search_recycle_minor_txt"
            android:text="@string/app_name"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/medium_txt_height" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                style="@style/search_recycle_minor_txt"
                android:layout_marginEnd="@dimen/recycle_minor_text_margin"
                android:maxEms="10"
                android:text="@string/app_name"
                android:textSize="@dimen/medium_txt_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ellipse_1"
                app:tint="?attr/colorOnSurfaceInverse" />

            <TextView
                android:id="@+id/track_time"
                style="@style/search_recycle_minor_txt"
                android:layout_marginHorizontal="@dimen/recycle_minor_text_margin"
                android:text="@string/app_name"
                android:textSize="@dimen/medium_txt_small" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/settings_margin_start"
        android:src="@drawable/agreement"
        app:tint="?attr/colorOnSurfaceInverse" />

</LinearLayout>