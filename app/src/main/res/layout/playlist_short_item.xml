<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingStart="12dp">

    <ImageView
        android:id="@+id/img_playlist_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:src="@drawable/red_heart"

        android:background="@drawable/image_rounded_cover_2dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_playlist_cover"
        app:layout_constraintTop_toTopOf="@id/img_playlist_cover" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/app_name"

        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/img_playlist_cover"
        app:layout_constraintTop_toBottomOf="@id/txt_playlist_name" />


</androidx.constraintlayout.widget.ConstraintLayout>